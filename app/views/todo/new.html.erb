<div class="container title">
  <h1>新規Todo</h1>
</div>



<div class="newtodo">
  <% @todo.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_for @todo, url:"/todo" do |f| %>
    <div class="form-field">
      <%= f.label :やること %>
      <%= f.text_field :content, class: 'form-control' ,value: @todo.content %>
    </div>
    <div class="form-field">
      <%= f.label :期限 %>
      <div>
        <%= f.date_field :deadline, class: 'form-control' ,value: @todo.deadline%>
      </div>
    </div>
    <div class="form-submit">
      <%= f.submit "Todoを作る", class: "btn btn-primary"%>
    </div>
  <% end %>
  <%= link_to("/todo/list") do %>
  <button type="button" class="btn btn-primary back-btn">
    戻る
  </button>
  <% end %>
</div>
